<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.forum.bean">
	<class name="com.forum.bean.Reply" table="cx_reply">
		<id name="id" column="cx_reply_oid" type="long">   
			<generator class="sequence" />
		</id>
		<property name="content" column="content" type="text" ></property>
		<property name="postTime" column="postTime" type="java.sql.Timestamp"></property>
		<property name="authorName" column="authorName" type="java.lang.String"></property>
		<property name="floor" column="floor" type="java.lang.Integer"></property>
		<many-to-one name="author" column="cx_user_oid" class="User"></many-to-one>
		<many-to-one name="topic" column="cx_topic_oid" class="Topic"></many-to-one>
	</class>
</hibernate-mapping>