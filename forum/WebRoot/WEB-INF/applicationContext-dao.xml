<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">  
    <bean id="forumDao" class="com.forum.dao.impl.ForumDaoImpl" scope="singleton">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="replyDao" class="com.forum.dao.impl.ReplyDaoImpl" scope="singleton">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="topicDao" class="com.forum.dao.impl.TopicDaoImpl" scope="singleton">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="userDao" class="com.forum.dao.impl.UserDaoImpl" scope="singleton">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
</beans>
